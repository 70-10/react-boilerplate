{
  "name": "react-boilerplate",
  "description": "React Boilerplate",
  "version": "0.1.0",
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "bugs": {
    "url": "https://github.com/70-10/react-boilerplate/issues"
  },
  "devDependencies": {
    "ava": "0.13.0",
    "babel-core": "6.7.4",
    "babel-eslint": "6.0.2",
    "babel-loader": "6.2.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-register": "6.7.2",
    "chokidar-cli": "1.2.0",
    "css-loader": "0.23.1",
    "del-cli": "0.2.0",
    "eslint": "2.6.0",
    "eslint-plugin-react": "4.2.3",
    "file-loader": "0.8.5",
    "nyc": "6.1.1",
    "postcss-loader": "0.8.2",
    "react": "0.14.8",
    "react-dom": "0.14.8",
    "react-hot-loader": "1.3.0",
    "react-micro-container": "1.0.0",
    "react-unit": "1.3.2",
    "rucksack-css": "0.8.5",
    "style-loader": "0.13.1",
    "webpack": "1.12.14",
    "webpack-dev-server": "1.14.1"
  },
  "homepage": "https://github.com/70-10/react-boilerplate#readme",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/70-10/react-boilerplate.git"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --progress --colors",
    "clean": "del dist coverage .nyc_output",
    "lint": "eslint src",
    "report": "nyc report --reporter=html",
    "start": "webpack-dev-server -d --history-api-fallback --hot --inline --progress --colors --port 3000",
    "test": "npm run lint && nyc ava && npm run report",
    "test:watch": "chokidar '(src|test)/**/*.js' -c 'npm run lint && nyc ava'"
  }
}
